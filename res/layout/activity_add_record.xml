<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecordActivity" >

    <LinearLayout
        android:id="@+id/ll_top_add_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFF0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_icon_add_record"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="32dp"
            android:src="@drawable/ic_add_record" />

        <EditText
            android:id="@+id/et_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_vertical|right"
            android:inputType="numberDecimal"
            android:textSize="32sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tbl_all_tag_checkbox"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/ll_top_add_record"
        android:layout_marginTop="24dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cbx_snacks"
                android:layout_weight="1"
                android:tag="4"
                android:text="零食" />

            <CheckBox
                android:id="@+id/cbx_traffic"
                android:layout_weight="1"
                android:tag="5"
                android:text="交通" />

            <CheckBox
                android:id="@+id/cbx_entertainment"
                android:layout_weight="1"
                android:tag="6"
                android:text="娱乐" />

            <CheckBox
                android:id="@+id/cbx_party"
                android:layout_weight="1"
                android:tag="7"
                android:text="聚会" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cbx_communication"
                android:layout_weight="1"
                android:tag="8"
                android:text="通讯" />

            <CheckBox
                android:id="@+id/cbx_house"
                android:layout_weight="1"
                android:tag="9"
                android:text="住房" />

            <CheckBox
                android:id="@+id/cbx_gift"
                android:layout_weight="1"
                android:tag="10"
                android:text="文教" />

            <CheckBox
                android:id="@+id/cbx_medical"
                android:layout_weight="1"
                android:tag="11"
                android:text="日化" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cbx_travel"
                android:layout_weight="1"
                android:tag="12"
                android:text="衣服" />

            <CheckBox
                android:id="@+id/cbx_car"
                android:layout_weight="1"
                android:tag="13"
                android:text="数码" />

            <CheckBox
                android:id="@+id/cbx_education"
                android:layout_weight="1"
                android:tag="14"
                android:text="水电煤" />

            <CheckBox
                android:id="@+id/cbx_loan"
                android:layout_weight="1"
                android:tag="15"
                android:text="其它" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_save_record"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:text="保存" />

    <Button
        android:id="@+id/btn_add_again"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:text="再记一笔"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tbl_all_tag_checkbox"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:lines="3" />

</RelativeLayout>